using Microsoft.EntityFrameworkCore;
using Microsoft.Extensions.DependencyInjection;
using System;
using System.Linq;
using mvc_ef.Models;

namespace mvc_ef.Models
{
    public class SeedEntities
    {
	// SqliteContext context = new SqliteContext(
	//     serviceProvider.GetRequiredService<
	//     DbContextOptions<SqliteContext>>());
        
	protected override void SqliteContext.OnModelCreating(ModelBuilder modelbuilder)
	{
	    base.OnModelCreating(modelbuilder);			  
			  
	    modelbuilder.Entity<Person>()
		.HasMany(p => p.Languages)
		.WithMany(c => c.People)
		.UsingEntity(j => j.HasData(new { PeopleId = 1, LangaugeId = 1 }));
	}
    }
}
