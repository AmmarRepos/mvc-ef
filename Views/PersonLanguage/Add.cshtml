@model IEnumerable<mvc_ef.Models.Language>
    @{
	ViewData["Title"] = "Add Languages";
    }

    <h1>@ViewData["personName"]</h1>

    <table class="table">
	<thead>
            <tr>
		<th>
                    @Html.DisplayNameFor(model => model.LanguageName)
		</th>
		<th>

		</th>
		</th>
            </tr>
	</thead>
	<tbody>
	    @foreach (var item in Model)
	    {
		<tr>
		<td>
	    	@Html.DisplayFor(modelItem => item.LanguageName)
		</td>
		<td>
                    <a asp-action="AddLanguage" asp-route-languageId="@item.Id" asp-route-id=@ViewData["personId"]>Add</a>
		</td>
		</tr>
		}
	</tbody>
    </table>
    <div>
	<a asp-action="Edit" asp-route-id=@ViewData["personId"]>Back to List</a>
    </div>
